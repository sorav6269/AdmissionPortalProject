<%-include('./../header.ejs')%>
  <%-include('./../sidebar.ejs')%>
    
  <div class="content-wrapper" style="margin-bottom: 20px; margin-top: 20px; background-color: rgb(243, 192, 25);">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Update Students
            </h1>
          </div><!-- /.col -->
                </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="content mt-5">
      <div class="container-fluid">
        <div class="card col-md-6 " style="margin-left:25%;">
          <!-- /.card-header -->
          <div class="card-body">
            <form action="/Admin/courseupdate/<%=d._id%>" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    Name
                    <input type="text" name="name" value="<%= d.name%>" placeholder="Enter name" class="form-control">
                </div>
                <div class="mb-3">
                        Email
                    <input type="email" placeholder="Email" value="<%= d.email%>" name="email" class="form-control">
                </div>
                <div class="mb-3">
                        Phone
                    <input type="number" placeholder="phone no." value="<%= d.phone%>" name="phone" class="form-control">
                </div>
                <div class="mb-3">
                    D.O.B.
                    <input type="date" placeholder=" Enter D.O.B." name="dob" value="<%= d.dob%>" class="form-control">
                </div>
                <div class="mb-3">
                        Address
                        <textarea name="address"  placeholder="Enter address"value="<%= d.address%>" class="form-control"></textarea>
                </div>
                <div class="mb-3">
                        Gender <input type="radio" name="gender" class="mr-2" value="Male" value="<%= d.gender%>" readonly>Male <input type="radio" value="<%= d.gender%>" name="gender" value="Female" readonly>Female 
                </div>
                <div class="mb-5">
                    Qualification
                    <select name="qualification" value="<%= d.qualification%>"" readonly class="form-control">
                        <option>Qualification</option>
                        <option value="12th in Mathematics" >12th in Mathematics</option>
                    </select>
                <div class="mb-5">
                    Course
                <input type="text" value="B.Tech." class="form-control" name="course" readonly>
            </div>
                <div class="mb-3">
                    <button class="btn btn-info" type="submit">Sumbit</button>
                </div>
            </form>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <%-include('./../footer.ejs')%>